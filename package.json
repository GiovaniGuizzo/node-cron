{
  "name": "node-cron",
  "version": "3.0.3",
  "description": "A simple cron-like task scheduler for Node.js",
  "author": "Lucas Merencia",
  "license": "ISC",
  "homepage": "https://github.com/merencia/node-cron",
  "main": "./dist/cjs/node-cron.js",
  "module": "./dist/esm/node-cron.js",
  "types": "./dist/esm/node-cron.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/node-cron.d.ts",
      "require": "./dist/cjs/node-cron.cjs",
      "import": "./dist/esm/node-cron.js",
      "default": "./dist/esm/node-cron.js"
    }
  },
  "type": "module",
  "scripts": {
    "test": "c8 --reporter text --reporter html mocha --recursive './src/**/*.test.ts'",
    "lint": "./node_modules/.bin/eslint ./src",
    "check": "npm run lint && npm test",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/merencia/node-cron.git"
  },
  "keywords": [
    "cron",
    "scheduler",
    "schedule",
    "task",
    "job"
  ],
  "bugs": {
    "url": "https://github.com/merencia/node-cron/issues"
  },
  "dependencies": {
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/chai": "^5.2.1",
    "@types/expect": "^1.20.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.3",
    "@types/sinon": "^17.0.4",
    "@types/uuid": "^10.0.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "sinon": "^20.0.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  },
  "c8": {
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "src/test-assets/**"
    ]
  }
}

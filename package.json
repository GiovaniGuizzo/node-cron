{
  "name": "node-cron",
  "version": "3.0.3",
  "description": "A simple cron-like task scheduler for Node.js",
  "author": "Lucas Merencia",
  "license": "ISC",
  "homepage": "https://github.com/merencia/node-cron",
  "main": "src/node-cron.js",
  "type": "module",
  "scripts": {
    "test": "c8 --reporter html --reporter text mocha --recursive ./src",
    "lint": "./node_modules/.bin/eslint ./src",
    "check": "npm run lint && npm test"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/merencia/node-cron.git"
  },
  "keywords": [
    "cron",
    "scheduler",
    "schedule",
    "task",
    "job"
  ],
  "bugs": {
    "url": "https://github.com/merencia/node-cron/issues"
  },
  "dependencies": {
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "mocha": "^11.1.0",
    "sinon": "^20.0.0",
    "typescript-eslint": "^8.31.0"
  },
  "c8": {
    "reporter": [
      "html",
      "text"
    ],
    "exclude": [
      "src/test-assets/**"
    ]
  }
}
